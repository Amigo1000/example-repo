{{>head}}

<body class="container">
	<div class="row">

		<div class="col-md-6" style="text-align:center;margin-bottom:48px">
			<h1>Join as a player!</h1>
			<hr />
			<div style="background:#f9f9f9;border:1px solid #ddd;border-radius:3px;padding:12px">
				<form action="/api/profile" method="POST">
				<input type="text" name="firstName" placeholder="First Name"><br /><br>
				<input type="text" name="lastName" placeholder="Last Name"><br /><br>
				<input type="text" name="team" placeholder="Team"><br /><br>
				<input type="text" name="position" placeholder="Position"><br /><br>
				<input type="text" name="age" placeholder="Age"><br /><br>
				<input type="submit" value="Add Profile">

				</form>
			</div>
			
			</div>

			<div class="col-md-6" style="text-align:center;margin-bottom:48px">
				<h1>Create a Team!</h1>
				<hr />
				<div style="background:#f9f9f9;border:1px solid #ddd;border-radius:3px;padding:12px">
					<form action="/api/team" method="POST">
					<input type="text" name="name" placeholder="Name"><br /><br>
					<input type="text" name="city" placeholder="City"><br /><br>
					<input type="text" name="telephone" placeholder="Telephone"><br /><br>
					<input type="text" name="country" placeholder="Country"><br /><br>
					<input type="submit" value="Add Team">
	
					</form>
				</div>
				
				</div>
	</div>


  <!-- Turbo library imports: jQuery, Turbo CDN, sample app.js.
  NOTE: These should be minified in a build script -->
  <script type="text/javascript" src="/js/jquery.js"></script>

  <!-- For file uploading. Remove if file upload not necessry -->
  <script type="text/javascript" src="/js/dropzone.js"></script>

  <!-- Turbo CDN. Better to use CDN than to store locally. -->
  <script type="text/javascript" src="https://cdn.turbo360-dev.com/dist/turbo.min.js"></script>

  <!-- Your app specific code -->
  <script type="text/javascript" src="/js/app.js"></script>
</body>
</html>
